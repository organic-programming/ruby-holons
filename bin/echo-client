#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SDK_DIR="$(cd "${SCRIPT_DIR}/.." && pwd)"
GO_HOLONS_DIR="${SDK_DIR}/../go-holons"
HELPER_PATH="${SDK_DIR}/../kotlin-holons/cmd/echo-client-go/main.go"
PREFERRED_GO_BIN="/Users/bpds/go/go1.25.1/bin/go"

resolve_go_bin() {
  if [[ -n "${GO_BIN:-}" ]]; then
    printf '%s\n' "${GO_BIN}"
    return
  fi
  if [[ -x "${PREFERRED_GO_BIN}" ]]; then
    printf '%s\n' "${PREFERRED_GO_BIN}"
    return
  fi
  printf '%s\n' "go"
}

GO_CMD="$(resolve_go_bin)"
export GOCACHE="${GOCACHE:-/tmp/go-cache-ruby-cert}"

cd "${GO_HOLONS_DIR}"
exec "${GO_CMD}" run "${HELPER_PATH}" --sdk ruby-holons --server-sdk go-holons "$@"
